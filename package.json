{
  "name": "next-shadcn-starter",
  "private": true,
  "version": "0.1.0",
  "description": "Next.js boilerplate with Shadcn UI and TypeScript setup",
  "author": "Muhammad Akmal Hisyam",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:biome": "biome lint ./src",
    "lint:ci": "bun lint:next && bun lint:biome",
    "format": "biome check --write ./src next.* next-sitemap.* commitlint.*",
    "format:ci": "biome ci ./src next.* next-sitemap.* commitlint.*",
    "type:ci": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:ci": "bun run build && bun e2e",
    "release": "cross-env HUSKY=0 standard-version",
    "release:push": "git push --follow-tags origin main",
    "husky": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.412.0",
    "next": "14.2.5",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.3.0",
    "nextjs-toploader": "^1.6.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@playwright/test": "^1.45.2",
    "@testing-library/react": "^16.0.0",
    "@types/next-pwa": "^5.6.9",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.3",
    "@vitest/ui": "^2.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.1",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.4.5",
    "vitest": "^2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akmalhisyammm/next-shadcn-starter"
  },
  "bugs": {
    "url": "https://github.com/akmalhisyammm/next-shadcn-starter/issues"
  }
}
